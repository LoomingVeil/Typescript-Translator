{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "lib": ["es2020", "dom"],
        "strict": true,
        "checkJs": true,
        "allowJs": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "resolveJsonModule": true
    },
    "include": ["src/**/*", "scripts/**/*"],
    "exclude": ["java_src/**/*"]
}